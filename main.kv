#:include login_window.kv
#:include main_menu.kv
#:include block_window.kv
MDGridLayout:
    cols: 1
    MDFloatLayout:
        MDGridLayout:
            canvas:
                Color:
                    rgba: (0,0,0,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            # Put two weather icons here
            rows: 1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .01
        FloatLayout:
            canvas:
                Color:
                    rgba: (0,0,0,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            # Put two weather icons and avatar icon
            rows: 1
            pos_hint: {"top": 2, "left": 1}
            size_hint: 1, .15
            Image:
                source: "aegis_logo.png"
                size_hint: 0.5, 1
                pos_hint: {"top": 1.1, "right": 0.75}
        ScreenManager:
            id: screen_manager
            LoginWindow:
                name: "login_window"
                id: login_window
            MainMenu:
                name: "main_menu"
                id: main_menu
            BlockWindow:
                name: "block_window"
                id: block_window
        