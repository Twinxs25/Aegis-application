<LoginWindow>:
    name: "login"
    Image:
        source: "name.png"
        size_hint: 0.7, 0.7
        pos_hint: {"center_x": 0.5,"center_y": 0.7}
        halign: "center"

    MDTextFieldRound:
        id: login_email
        icon_right: "account"
        hint_text: "Email"
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: { "center_x": 0.5, "center_y":0.5 }

    MDTextFieldRound:
        id: login_password
        icon_right: "eye-off"
        hint_text: "Password"
        color: 
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {"center_x": 0.5,"center_y":0.4}
        password: True

    Label:
        id: login_message
        color: (1,0,0,1)
        size_hint: None, None
        pos_hint: {"center_x": 0.5,"center_y": 0.58}

    MDRoundFlatButton:
        text: "[u]SIGN UP[/u]"
        markup: True
        font_size: 12
        pos_hint: {"center_x" : 0.5, "center_y":0.2}
        on_release: 
            app.credentials.sign_up(login_email.text, login_password.text)
            print("LOG IN", login_email.text, login_password.text)

    MDRoundFlatButton:
        text: "[u]LOG IN[/u]"
        markup: True
        font_size: 12
        pos_hint: {"center_x" : 0.5, "center_y":0.27}
        on_release: 
            app.credentials.sign_in_existing_user(login_email.text, login_password.text)
