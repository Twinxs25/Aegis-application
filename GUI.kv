WindowManager:
    id: window_manager
    LoginWindow:
        id: login_screen
    MainMenu:

<LoginWindow>:
    name: "login"
    
    MDCard:
        size_hint: None, None
        size: 300,400
        pos_hint: { "center_x": 0.5, "center_y": 0.5 }
        elevation: 10
        padding: 25
        spacing: 25

        orientation: "vertical"

    Image:
        source: "name.png"
        size_hint: 0.7, 0.7
        pos_hint: {"center_x": 0.5,"center_y": 0.6}
        halign: "center"

    MDTextFieldRound:
        id: login_email
        icon_right: "account"
        hint_text: "Email"
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: { "center_x": 0.5, "center_y":0.4 }

    MDTextFieldRound:
        id: login_password
        icon_right: "eye-off"
        hint_text: "Password"
        color: 
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {"center_x": 0.5,"center_y":0.3}
        password: True

    Label:
        id: login_message
        color: (1,0,0,1)
        size_hint: None, None
        pos_hint: {"center_x": 0.5,"center_y": 0.48}

    MDRoundFlatButton:
        text: "[u]LOG IN[/u]"
        markup: True
        font_size: 12
        pos_hint: {"center_x" : 0.5, "center_y":0.1}
        on_release: 
            app.credentials.sign_up(login_email.text, login_password.text)
            print("LOG IN", login_email.text, login_password.text)



<MainMenu>:
    name: "main"
    MDBoxLayout:

        orientation: "vertical"

        MDToolbar:
            title: "Main Menu"
            pos_hint: {"top" : 1}
            left_action_items: [["menu", lambda x: app.callback(x)]]
            right_action_items: [["magnify", lambda x: app.search.open()]]
           
        Image:
            source: "name.png"
            size: 3, 3
            halign: "center"
            

        MDBottomAppBar:

            MDToolbar:
                title: "Website Archives"
                icon: "language-python"
                type: "bottom"
                left_action_items: [["archive"]]
                mode: "free-end"